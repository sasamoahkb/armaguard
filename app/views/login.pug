doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Login
    link(rel="stylesheet", href="styles.css")
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    script(src="darkmode.js")
    //-  script(src="quickScan.js")
  body.body
    header
      .dashboard 
        nav
          a.logo(href="/")
            img.logo-pic(src="images/ArmaguardSecurity.svg", alt="logo") 
          ul.navbar(id="myTopnav") 
            li.list-items 
              a(href="javascript:void(0);" onclick="showLoginAlert()") Devices
            li.list-items 
              a(href="javascript:void(0);" onclick="showLoginAlert()") Network 
            li.list-items 
              a(href="javascript:void(0);" onclick="showLoginAlert()") Learn
          ul.signin
              li.list-items
                a(href="/signup") Sign-Up
              li.list-items
                a(href="/login") Login

          ul.navbar-toggle  
              li.push-right
                label.switch(for="darkModeToggle")
                    input(type="checkbox" id="darkModeToggle")
                    span.slider.round
          a.icon(href="javascript:void(0);" onclick="myFunction()")
          
    main.signup 
      .signup-container 
        .signup-form
          h2.signup-title Login 
          form(action="/login", method="POST")
            .form-list
              label(for="email") Email 
              input(type="email", id="email", name="email", placeholder="Enter your email", required)
            .form-list
              label(for="password") Password 
              input(type="password", id="password", name="password", placeholder="Enter your password", required)
            input(type="submit" value="Login", class="signup-button")
        .login-link 
          a(href="/signup") Sign up

    footer 
